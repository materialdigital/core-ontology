@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex:    <http://www.example.org/#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix pmd:   <https://w3id.org/pmd/co/> .
@prefix obo:   <http://purl.obolibrary.org/obo/> .

pmd:CategoricalValueSpecificationShape 
    rdf:type sh:NodeShape ;
    sh:targetClass  obo:OBI_0001930 ; # categorical value specification
    
    # Exactly one property pointing to the scalar value
    sh:property [ 
        sh:or (
            [
                sh:path  pmd:PMD_0000006 ;  #pmd:has value, replaced because <http://purl.obolibrary.org/obo/OBI_0001937> ; #obi:has specified numeric value not in the ontology
                sh:minCount 1 ;
                sh:maxCount 1 
            ]
            [
                sh:path rdfs:value ;
                sh:minCount 1 ;
                sh:maxCount 1 
            ]
        )
    ] ;
   
   sh:closed true ;
   sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .
