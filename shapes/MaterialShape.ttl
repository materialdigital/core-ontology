@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex:    <http://www.example.org/#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix pmd:   <https://w3id.org/pmd/co/> .
@prefix obo:   <http://purl.obolibrary.org/obo/> .

# TODO:

pmd:MaterialShape  
    rdf:type sh:NodeShape ;
    sh:targetClass pmd:PMD_0000000 ; ## material
    sh:description "Shape which states that Materials can bear intensive qualities or behavioral material properties. The latter can be described in the BehavioralPropertyShape." ;
    sh:property 
    [
        sh:path obo:BFO_0000196 ; ## bearer of
        sh:or 
        (
            [
                sh:class pmd:PMD_0020131 ; #intensive quality
            ]
            [
                sh:class pmd:PMD_0000005 ; ## behavioral material property

            ]
            [
                sh:node pmd:BehavioralPropertyShape ;
            ]
        )
    ] ;

    sh:property
    [
        sh:path pmd:PMD_0020005 ; # consists of
        sh:class pmd:PMD_0020025 ; # portion of matter
        sh:minCount 1 ; 
    ] ;

    sh:property
    [
        sh:path pmd:PMD_0001026 ; # complies with
        sh:class pmd:PMD_0060007 ; # material specification
        sh:maxCount 1 ;
    ] ;

    # Note: not closing the shape cause materials can be subjects in other triples
    sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .
