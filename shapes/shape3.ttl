@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex:    <http://www.example.org/> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix pmd:   <https://w3id.org/pmd/co/> .
@prefix obo:   <http://purl.obolibrary.org/obo/> .

pmd:MeasurementProcessShape
    rdf:type sh:NodeShape ;
    sh:targetClass  pmd:PMD_0001025 ; #assay

    # and one property pointing to the input
    sh:property [
        sh:path pmd:PMD_0000015 ;  #pmd:has input
        sh:minCount 1 ;
        sh:class obo:BFO_0000040
    ] ;
    
    # One property pointing to the output ...
    sh:property [
        sh:path pmd:PMD_0000016 ;  #has output
        sh:minCount 1 ;
        sh:node pmd:MeasurementDatumShape
    ] ;
    

    
    # property path 'has_specified_input'/'has_role' must point to the same 
    # (role-)resource as the 'realizes' of our assay. 
    sh:property [
        sh:path (<https://w3id.org/pmd/co/PMD_0000015> <http://purl.obolibrary.org/obo/BFO_0000196>) ; # pmd;has input --> bfo:bearer of
        sh:equals <http://purl.obolibrary.org/obo/BFO_0000055> ; #bfo:realizes
    ] ;

    # property path 'has_specified_input'/'has_quality'/'is_quality_measured_as' must point to the same CHANGED TO pmd:has input --> pmd:bearer of --> bfo:concretizes = pmd:has output
    # (measurement-)resource as the 'has_specified_output' of our assay. 
    sh:property [
        sh:path (<https://w3id.org/pmd/co/PMD_0000015> 
                 <http://purl.obolibrary.org/obo/BFO_0000196>
                 <http://purl.obolibrary.org/obo/BFO_0000059>) ;
        sh:equals <https://w3id.org/pmd/co/PMD_0000016> ;
    ] ;


   sh:closed false ;
   sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .
