@prefix unit: <http://qudt.org/vocab/unit/> .

# TODO: property -- inheres in -- material?

pmd:BehavioralPropertyShape
    rdf:type sh:NodeShape ; 
    sh:targetClass pmd:PMD_0000005 ; # Behavioral Material Property
    sh:description "Shape which states that behavioral material property inheres in (unbounded) portion of matter,  concretizes scalar value specification, and is realized in a process." ;
    sh:property
    [
        sh:path obo:BFO_0000197 ; # inheres in
        sh:minCount 1 ;
        sh:maxCount 1 ; 
        sh:class pmd:PMD_0000001 ; # portion of matter
        # TODO: add portion of matter and/or material shape
    ] ;

    sh:property
    [
        sh:path obo:BFO_0000059 ; # concretizes
        sh:minCount 1 ;
        sh:node  pmd:ScalarValueSpecificationShape ;
        # TODO: can it be categorical value specification?
    ] ; 

    sh:property 
    [
        sh:path obo:BFO_0000054 ; # has realization
        sh:minCount 1 ; 
        sh:maxCount 1 ; 
        sh:class obo:BFO_0000015 ; # process
    ] ;

    sh:closed true ;
    sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty rdfs:label) .