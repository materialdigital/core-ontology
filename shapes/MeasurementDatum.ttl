@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex:    <http://www.example.org/> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix pmd:   <https://w3id.org/pmd/co/> .
@prefix obi:   <http://purl.obolibrary.org/obo/> .

pmd:ScalarMeasurementDatumShape
    rdf:type sh:NodeShape ; 
    sh:targetClass pmd:PMD_0000023 ; #scalar measurement datum
    sh:property [
        sh:path pmd:PMD_0060000 ; #has value specification
        sh:minCount 1 ;
        sh:maxCount 1 ; 
        sh:node pmd:ScalarValueSpecificationShape 
    ] ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .


pmd:CategoricalMeasurementDatumShape
    rdf:type sh:NodeShape ; 
    sh:targetClass pmd:PMD_0060005 ; #categorical measurement datum 
    sh:property [
        sh:path pmd:PMD_0060000 ; #has value specification
        sh:minCount 1 ;
        sh:maxCount 1 ; 
        sh:node pmd:CategoricalValueSpecificationShape
    ] ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .

pmd:MeasurementDatumShape
    rdf:type sh:NodeShape ; 
    sh:targetclass obi:IAO_0000109 ;
    sh:or   (
        [
            sh:class pmd:PMD_0000023 ; #scalar measurement datum
            sh:node pmd:ScalarMeasurementDatumShape
        ]
        [
            sh:class pmd:PMD_0060005 ; #categorical measurement datum
            sh:node pmd:CategoricalMeasurementDatumShape
        ]
    ) ;
    sh:closed true ;
    sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .