shape: 
    a owl:Ontology ;
    owl:imports sh: ;
    owl:imports pmd: ;

	sh:declare [
		sh:prefix "sh" ;
		sh:namespace "http://www.w3.org/ns/shacl#"^^xsd:anyURI ;
	] .


