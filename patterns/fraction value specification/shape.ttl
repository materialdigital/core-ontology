@prefix obo:    <http://purl.obolibrary.org/obo/> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix pmd: <https://w3id.org/pmd/co/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix shape: <https://w3id.org/pmd/co/shapes/fraction_value_specification/> .
@prefix : shape: .
@base shape: .

shape:
  rdf:type owl:Ontology ;
  owl:imports sh: .
  
shape:fraction_value_specification
    rdf:type sh:NodeShape ;
    sh:targetClass  <https://w3id.org/pmd/co/PMD_0025997> ; # fraction value specification
    
    # Exactly one property pointing to the scalar value
    sh:property
        [
            sh:minCount 1 ;
            sh:maxCount 1 ;
            sh:maxInclusive 100 ;
            sh:datatype xsd:float ;
            sh:message "While defining fraction specification, the numerical value must be present, unique, and not exceed 100." ;
            sh:path <http://purl.obolibrary.org/obo/OBI_0001937>  # has specified numeric value
        ] ;

    # Exactly one property pointing to the physical unit from UO
    sh:property 
    [           
        sh:path <http://purl.obolibrary.org/obo/IAO_0000039> ; # iao:has measurement unit label
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:in 
        (
            obo:UO_0000163  # mass percentage
            obo:UO_0000165  # volume volume percentage
            obo:UO_0000076  # mole fraction
        ) ; 
        sh:message "has measurement unit label must only point to one of the allowed UO individuals: mass percentage, mass volume percentage, or mole fraction." ;
    ] ;
    sh:property
    [
        sh:path <http://purl.obolibrary.org/obo/OBI_0001927> ; #specifies value of 
        sh:class <http://purl.obolibrary.org/obo/BFO_0000001> ; # entity
    ] ;
   
   sh:closed false ;
   # not closing the shape because of is about and its sub properties
   sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .
