prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix sh:    <http://www.w3.org/ns/shacl#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix ex:    <http://www.example.org/#> .
@prefix owl:   <http://www.w3.org/2002/07/owl#> .
@prefix obo:    <http://purl.obolibrary.org/obo/> .
@prefix pmd:   <https://w3id.org/pmd/co/> .
@prefix shape:   <https://w3id.org/pmd/co/shapes> .

shape:quality 
    rdf:type sh:NodeShape ;
    sh:targetClass  obo:BFO_0000019 ; # quality
    sh:not [ sh:class obo:BFO_0000145 ; ] ; #discarding relational quality
    sh:description "Shape describing that quality is quality of some independent continuant and concretizes some value specification. Note that the relational quality is excluded. " ;
    
    # quality of independent continuant
    sh:property 
        [ 

            sh:path  obo:RO_0000080 ;  # quality of
            # sh:minCount 1 ;
            sh:maxCount 1 ; 
            sh:class obo:BFO_0000004 ; # independent continuant
			sh:message "Quality must be a quality of exactly one independent continuant." ;

        ] ;

    # concretizes value specification
    sh:property
        [
            sh:path obo:RO_0000059 ; # concretizes
            sh:or 
                (
                    [ sh:node shape:scalar_value_specification ; ]
                    [ sh:node shape:categorical_value_specification ; ]
                ) ;
				sh:message "Quality must concretize some value specification (scalar or categorical). " ;

        ] ;
   	sh:property
		[
			sh:path obo:BFO_0000108 ; # exists at
			sh:class obo:BFO_0000008 ; #temporal region
			sh:message "Quality must exist at some temporal region." ;

		] ;
   #TODO which other triples can be written with SDCs?
   sh:closed false ;
   sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .


shape:behavioral_material_property 
    rdf:type sh:NodeShape ;
    sh:targetClass  pmd:PMD_0000005 ; # behavioral material property
    sh:description "Shape describing that behavioral material property is characteristic of some independent continuant and concretizes some value specification. " ;
    
    # characteristic independent continuant
    sh:property 
        [ 

            sh:path  obo:RO_0000052 ;  # characteristic of
            sh:minCount 1 ;
            sh:maxCount 1 ; 
            sh:class obo:BFO_0000004 ; # independent continuant
			sh:message "Behavioral material property must be a characteristic of exactly one independent continuant." ;
        ] ;

    # concretizes value specification
    sh:property
        [
            sh:path obo:RO_0000059 ; # concretizes
            sh:or 
                (
                    [ sh:node shape:scalar_value_specification ; ]
                    [ sh:node shape:categorical_value_specification ; ]
                ) ;
			sh:message "Behavioral material property must concretize some value specification (scalar or categorical). " ;

        ] ;
	
	sh:property
		[
			sh:path obo:BFO_0000108 ; # exists at
			sh:class obo:BFO_0000008 ; #temporal region
			sh:message "Behavioral material property must exist at some temporal region. " ;
		] ;
   
   #TODO which other triples can be written with SDCs?
   sh:closed false ;
   sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .

   shape:relational_quality 
   rdf:type sh:NodeShape ;
   sh:targetClass  obo:BFO_0000145 ; # relational quality
   sh:description "Shape describing that quality is quality of some independent continuant and concretizes some value specification. Note that the relational quality is excluded. " ;
   
   # relational quality of independent continuant
   sh:property 
       [ 

           sh:path  pmd:PMD_0025999 ;  # relational quality of
           sh:minCount 1 ;
           sh:class obo:BFO_0000004 ; # independent continuant
		   sh:message "Relational quality must be a relational quality of more than one independent continuant." ;

       ] ;

   # concretizes value specification
   sh:property
       [
            sh:path obo:RO_0000059 ; # concretizes
            sh:or 
               (
                   [ sh:node shape:scalar_value_specification ; ]
                   [ sh:node shape:categorical_value_specification ; ]
                   [ sh:node shape:fraction_value_specification ; ]
               ) ;
			sh:message "Relational quality must concretize some value specification (scalar, categorical, or fraction). " ;

       ] ;

  #TODO which other triples can be written with SDCs?
  sh:closed false ;
  sh:ignoredProperties ( rdf:type owl:topDataProperty owl:topObjectProperty ) .
